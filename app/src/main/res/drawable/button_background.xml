<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#9C27B0" /> <!-- Màu nền khi nút được nhấn -->
            <corners android:radius="20dp" /> <!-- Độ cong của các góc -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#673AB7" /> <!-- Màu nền mặc định của nút -->
            <corners android:radius="8dp" /> <!-- Độ cong của các góc -->
        </shape>
    </item>
</selector>