<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hinhnennnnnnn"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_showscore"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_archiverment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_time"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_time"
        android:text="60s"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/txt_ask_number"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="160dp"
        android:text="Câu Số 1"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txt_ask"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/khungcauhoi"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingTop="40dp"
        android:paddingEnd="10dp"
        android:paddingBottom="40dp"
        android:text="Thu về, tiếng ve nỉ non
Lá vàng trải lối em còn nhớ không?
Gió se lạnh, lòng bồi hồi
Thu về, Hà Nội mộng mơ, ta với ta."
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tableRow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02"
        tools:layout_editor_absoluteX="5dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/tableRow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.898"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:id="@+id/case_A"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_tl"
            android:gravity="center"
            android:text="A"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/case_B"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_tl"
            android:gravity="center"
            android:text="B"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/case_C"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_tl"
            android:gravity="center"
            android:text="C"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/case_D"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_tl"
            android:gravity="center"
            android:text="D"
            android:textColor="@color/blue" />

    </LinearLayout>

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp">

        <ImageButton
            android:id="@+id/btn_5050"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="@drawable/bg_5050" />

        <ImageButton
            android:id="@+id/btn_callfr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="@drawable/btn_call" />

        <ImageButton
            android:id="@+id/btn_audience"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="@drawable/bg_audience" />

        <ImageButton
            android:id="@+id/btn_change"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="@drawable/bg_change" />


    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>